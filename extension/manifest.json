{
  "manifest_version": 3,
  "name": "Watch Party",
  "version": "1.1.0",
  "description": "Synchronize video playback with friends in real-time",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://vimeo.com/*",
    "https://www.vimeo.com/*",
    "https://www.dailymotion.com/*",
    "https://dailymotion.com/*",
    "https://www.twitch.tv/*",
    "https://twitch.tv/*",
    "https://www.netflix.com/*",
    "https://www.primevideo.com/*",
    "https://www.amazon.com/*",
    "https://www.disneyplus.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://vimeo.com/*",
        "https://www.vimeo.com/*",
        "https://www.dailymotion.com/*",
        "https://dailymotion.com/*",
        "https://www.twitch.tv/*",
        "https://twitch.tv/*",
        "https://www.netflix.com/*",
        "https://www.primevideo.com/*",
        "https://www.amazon.com/*",
        "https://www.disneyplus.com/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
